<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deck Name"
        android:id="@+id/textView21"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size_small_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question"
        android:id="@+id/textView22"
        android:layout_below="@+id/textView21"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:layout_below="@+id/textView22"
        android:layout_centerHorizontal="true"
        android:lines="@integer/textbox_lines_land"
        android:maxLines="@integer/textbox_lines_land"
        android:minLines="@integer/textbox_lines_land"
        android:background="@color/textbox_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/answer"
        android:id="@+id/textView23"
        android:layout_below="@+id/editText5"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:layout_below="@+id/textView23"
        android:layout_centerHorizontal="true"
        android:lines="@integer/textbox_lines_land"
        android:maxLines="@integer/textbox_lines_land"
        android:minLines="@integer/textbox_lines_land"
        android:background="@color/textbox_background" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height_smaller"
        android:text="@string/add_card"
        android:id="@+id/button17"
        android:layout_below="@+id/editText6"
        android:layout_toLeftOf="@+id/textView23"
        android:layout_toStartOf="@+id/textView23"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height_smaller"
        android:text="@string/done"
        android:id="@+id/button18"
        android:layout_below="@+id/editText6"
        android:layout_toRightOf="@+id/textView23"
        android:layout_toEndOf="@+id/textView23"
        android:textSize="@dimen/text_size" />
</RelativeLayout>