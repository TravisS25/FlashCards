<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deck Name"
        android:id="@+id/textView18"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question"
        android:id="@+id/textView19"
        android:layout_below="@+id/textView18"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true"
        android:lines="@integer/textbox_lines_port"
        android:maxLines="@integer/textbox_lines_port"
        android:minLines="@integer/textbox_lines_port"
        android:background="@color/textbox_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/answer"
        android:id="@+id/textView20"
        android:layout_below="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="@dimen/text_size" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_below="@+id/textView20"
        android:layout_centerHorizontal="true"
        android:lines="@integer/textbox_lines_port"
        android:maxLines="@integer/textbox_lines_port"
        android:minLines="@integer/textbox_lines_port"
        android:background="@color/textbox_background" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height_small"
        android:text="@string/add_card"
        android:id="@+id/button15"
        android:layout_below="@+id/editText4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:textSize="@dimen/text_size"
        android:clickable="true"
        android:onClick="addCard" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height_small"
        android:text="@string/done"
        android:id="@+id/button16"
        android:layout_below="@+id/button15"
        android:layout_alignLeft="@+id/button15"
        android:layout_alignStart="@+id/button15"
        android:textSize="@dimen/text_size"
        android:clickable="true"
        android:onClick="writeToList" />
</RelativeLayout>