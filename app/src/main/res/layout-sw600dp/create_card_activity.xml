<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deck Name"
        android:id="@+id/deck_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question"
        android:id="@+id/textView5"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size_small_header" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question_edit"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:lines="@integer/textbox_lines_port"
        android:maxLines="@integer/textbox_lines_port"
        android:minLines="@integer/textbox_lines_port"
        android:background="@color/scrollview_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/answer"
        android:id="@+id/textView8"
        android:layout_below="@+id/question_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:textSize="@dimen/text_size_small_header" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answer_edit"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:lines="@integer/textbox_lines_port"
        android:maxLines="@integer/textbox_lines_port"
        android:minLines="@integer/textbox_lines_port"
        android:background="@color/scrollview_background" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height_small"
        android:text="@string/add_card"
        android:id="@+id/add_card"
        android:layout_marginTop="28dp"
        android:clickable="true"
        android:onClick="addCard"
        android:layout_below="@+id/answer_edit"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height_small"
        android:text="@string/done"
        android:id="@+id/button7"
        android:layout_below="@+id/add_card"
        android:layout_alignRight="@+id/deck_name"
        android:layout_alignEnd="@+id/deck_name"
        android:layout_marginTop="26dp"
        android:clickable="true"
        android:onClick="toDeckTable"
        android:textSize="@dimen/text_size" />

</RelativeLayout>